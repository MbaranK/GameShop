@model Cart

<form method="post">
    <input hidden asp-for="GameId" />
        <div class="card  container pt-4 mt-4">
            <div class="card-header bg-danger  text-secondary ml-0  row ">
                <div class="col-12 col-md-6">
                   <h1 class="text-white">@Model.Game.Name</h1>
                    <p class="text-warning">by @Model.Game.Studio.Name</p>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                    <span class="badge bg-info pt-2" style="height:30px;">Stok: @Model.Game.Stock</span>
                    <span class="badge bg-info pt-2" style="height:30px;">@Model.Game.Category.Name</span>
                    <span class="badge bg-warning pt-2" style="height:30px;">@Model.Game.Studio.Name</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Fiyat:@Model.Game.Price.ToString("c")</h5>
                            </div>
                            <div class="row text-center pl-2" style="color:#ffffff; font-weight:bold">
                                <div class="p-1 col-2 bg-secondary">
                                    <div>Açıklama</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-primary">@Model.Game.Description</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Adet:</h4></div>
                                <div class="col-10"><input asp-for="Count" min="1" class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Game.ImgUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control "  asp-action="Index">Ana Sayfaya geri dön</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control"  asp-route-style="height:50px;">Sepete Ekle</button>
                    </div>
                </div>
            </div>
        </div>
</form>


