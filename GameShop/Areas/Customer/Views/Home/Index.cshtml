@model IEnumerable<GameShopModels.Game>


<div class="row pb-3">
    @foreach (var game in Model)
    {
            <div class="col-lg-3 col-md-6">
                <div class="row p-1">
                    <div class="col-11 p-1" style="border:1px solid #ffffff; border-radius:5px;">
                           <div class="card" style="width: 18rem;">
          <img src="@game.ImgUrl" class="card-img-top" alt="@game.Name">
          <div class="card-body">
              <div class="pl-1">
            <h5 class="card-title text-primary">@game.Name</h5>
                <p class="card-title text-info"><b>@game.Studio.Name</b></p>
                </div>
                <div class="pl-1">
                        <p class="card-text">Fiyat: ₺@game.Price.ToString("0.00")</p>
                    </div>
          </div>
        </div>
                        <div>
                                <a asp-action="Details" class="btn btn-primary form-control" asp-route-gameId="@game.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
    }
</div>


