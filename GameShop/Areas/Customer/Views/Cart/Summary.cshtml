@model GameShopModels.ViewModel.CartVM
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class=" row container">
					<div class="col-6">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Sipariş Özeti
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-outline-info btn-sm">Sepete Dön</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Gönderim Detayları:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>İsim:</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.Name" class="form-control" />
									<span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Telefon:</label>
								</div> 
								<div class="col-9">
									<input asp-for="OrderHeader.PhoneNumber" class="form-control" />
									<span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Adres:</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.Address" class="form-control" />
									<span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>İlçe:</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.State" class="form-control" />
									<span asp-validation-for="OrderHeader.State" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Şehir:</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.City" class="form-control" />
									<span asp-validation-for="OrderHeader.City" class="text-danger"></span>
								</div>
							</div>

						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Sipariş Özeti:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach(var details in Model.CartList) {
								<li class="list-group-item d-flex justify-content-between">
									<div>
										<h6 class="my-0">@details.Game.Name</h6>
										<small class="text-muted">Adet: @details.Count </small>
									</div>
									<span class="text-muted">@((details.Game.Price * details.Count).ToString("c")) </span>
								</li>
								}
								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-white">Toplam (TL)</small>
									<strong class="text-white">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">Tahimini Varış Zamanı: @DateTime.Now.AddDays(14).ToShortDateString() </p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Sipariş Ver</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
